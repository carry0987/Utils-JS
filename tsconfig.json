{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/dts/",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "rollup.config.ts"
  ],
  "exclude": ["node_modules", "dist", "**/__tests__/**/*"]
}
